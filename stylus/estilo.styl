@import "rslider.styl"
@import "font.styl"
@import "nib"

a
  text-decoration: none;
.u-title
  border-bottom 2px dashed #00CCFF
  color #00CCFF
  font-weight normal
  font-size 1.5em
  padding-bottom .5em
  text-align center

.u-containerDefault
  max-width 800px
  margin 0 auto

.MainMenu
  background #1E1E1E
  text-align center
  height 3.75em
  position fixed
  left 0
  right 0
  top 0
  z-index 3

.MainMenu-list
  margin 0
  padding 0

.MainMenu-item
  display inline-block

.MainMenu-link
  color #00DBFF
  text-decoration none
  line-height 3.75em
  margin-right 1.5em

.Slider
  background black
  &-container
    max-width 1024px
    margin 0 auto
.Header
  margin-top 3.75em
  background-image url('../images/portada.jpg')
  background-repeat no-repeat
  background-position center
  background-size cover
  text-align center
  padding 1.2em 0
  &-button
    width 40px
    height 40px
    line-height 40px
    border-radius 50%
    background white
    border none
    position fixed
    z-index 3
    right 1em
    top 1em
    outline 0
    display none
    &.is-active
      display block

.Header-imageContainer
  margin 0

.Header-image
  border 5px solid white
  border-radius 50%

.Header-name,
.Header-link
  color white

.Header-link
  font-size 2.2em
  font-weight bold
  text-decoration none
.Header-name
  font-size 1.5em
  font-weight 300
  margin 0

.Profile
  text-align center
  padding 0 1em

.Profile-link
  background orange
  border-radius 2em
  color white
  margin-right .5em
  margin-bottom 1em
  padding .5em 1em
  text-decoration none
  display inline-block
  &.twitter
    background #00BAE4
  &.facebook
    background #0080C0
  &.github
    background #829AA8
  &:before
    margin .5em
@media screen and (max-width: 480px)
  .Profile-link
    display block

.Work
  margin-top 2em
  text-align center
  margin-bottom 2em
  &-container
    display flex
    flex-wrap wrap
    justify-content space-around
.Work-item
  display inline-block

.Work-imageContainer
  margin 0

.Work-description
  font-size 1.1em
  color #515151

.Footer
  background-color #0EC3DE
  background-repeat no-repeat
  background-position center
  image("../images/footer-mejorandola.jpg", 1024px, 343px)
  text-align center
  padding-bottom 1em

.Footer-form
  text-align center
  display inlidne-block

.Footer-left
  display inline-block
  max-width 32em
  text-align center
  vertical-align top

.Footer-title
  color white

.Footer-formInput,
.Footer-textarea
  background white
  border none
  display block
  border-radius 2em
  padding .5em
  margin 0 auto 1em
  outline 0

@media screen and (max-width: 767px)
  .Footer
    &-form
      display block
    &-formInput
    &-textarea
      box-sizing border-box
      width 90%
  .Header
    margin-top 0
  .MainMenu
    left -200px
    width 200px
    height auto
    transition .3s
    &.is-active
      left 0
    &-item
      display block
    &-link
      margin 0

.Footer-textarea
  resize none

.Footer-button
  background orange
  border-radius 1em
  border none
  color white
  padding .5em 1em
